NODE_ENV=production
DEBUG=false

GATEWAY_PORT=3000
REPORTER_PORT=3001
FB_COLLECTOR_PORT=3010
TTK_COLLECTOR_PORT=3020

POSTGRES_HOST=postgres-prod
POSTGRES_PORT=5432
POSTGRES_DB=events_db_prod
POSTGRES_USER=postgres_prod_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

DATABASE_URL=postgresql://postgres_prod_user:CHANGE_THIS_STRONG_PASSWORD@postgres-prod:5432/events_db_prod?schema=public&connection_limit=50

NATS_URL=nats://nats-prod-cluster:4222
NATS_PORT=4222

PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

EVENT_ENDPOINT=https://gateway-prod.yourdomain.com/events

LOGGER_SAMPLING_RATE=0.1
LOG_LEVEL=warn

NATS_MAX_RECONNECT_ATTEMPTS=20
NATS_RECONNECT_TIME_WAIT=1000
NATS_TIMEOUT=5000
NATS_PING_INTERVAL=30000
NATS_MAX_PING_OUT=2

COLLECTOR_CONNECT_RETRIES=15
COLLECTOR_CONNECT_DELAY=2000

HEALTH_CHECK_TIMEOUT=2000

RATE_LIMIT=500
BODY_SIZE_LIMIT=10mb

ENABLE_COMPRESSION=true
ENABLE_CACHING=true
ENABLE_CORS=false
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ENABLE_ALERTS=true
ALERT_WEBHOOK_URL=https://your-alert-webhook.com
METRICS_RETENTION_DAYS=30
SSL_CERT_PATH=/etc/ssl/certs/app.crt
SSL_KEY_PATH=/etc/ssl/private/app.key
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90
