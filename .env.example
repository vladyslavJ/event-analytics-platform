# ==============================================
# .env.example - Template for environment variables
# Copy this file to .env and adjust values as needed
# ==============================================

# ==================== APPLICATION ====================

# Node.js Environment
NODE_ENV=development

# Debug Mode
DEBUG=false

# ==================== SERVICES PORTS ====================

# Gateway Service Port
GATEWAY_PORT=3000

# Reporter Service Port  
REPORTER_PORT=3001

# Facebook Collector Service Port
FB_COLLECTOR_PORT=3010

# TikTok Collector Service Port
TTK_COLLECTOR_PORT=3020

# ==================== DATABASE ====================

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=events_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Complete Database URL for Prisma
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/events_db?schema=public&connection_limit=20

# ==================== MESSAGE QUEUE ====================

# NATS Configuration
NATS_URL=nats://nats:4222
NATS_PORT=4222

# ==================== MONITORING ====================

# Prometheus Configuration
PROMETHEUS_PORT=9090

# Grafana Configuration  
GRAFANA_PORT=3000

# ==================== EVENT PUBLISHER ====================

# Event Endpoint for Publisher (Required by andriiuni/events)
EVENT_ENDPOINT=http://gateway:3000/events

# ==================== LOGGING ====================

# Logger Sampling Rate (0.0 - 1.0)
LOGGER_SAMPLING_RATE=0.3

# Log Level (info, warn, error, debug)
LOG_LEVEL=info

# ==================== NATS CONNECTION OPTIONS ====================

# Connection Retry Settings
NATS_MAX_RECONNECT_ATTEMPTS=10
NATS_RECONNECT_TIME_WAIT=2000
NATS_TIMEOUT=10000
NATS_PING_INTERVAL=60000
NATS_MAX_PING_OUT=5

# ==================== COLLECTOR SETTINGS ====================

# Connection Retry Settings for Collectors
COLLECTOR_CONNECT_RETRIES=5
COLLECTOR_CONNECT_DELAY=5000

# ==================== HEALTH CHECK SETTINGS ====================

# Health Check Endpoints
HEALTH_CHECK_TIMEOUT=5000

# ==================== SECURITY ====================

# API Rate Limiting (requests per minute)
RATE_LIMIT=1000

# Request Body Size Limit
BODY_SIZE_LIMIT=50mb
